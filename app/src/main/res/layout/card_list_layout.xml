<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    >

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/avg"
            android:layout_alignParentTop="true"
            />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@id/img1"
           android:background="@color/black"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/txt"
               android:text="GuardiÃµes"
               android:textColor="#fff"
               android:textSize="24sp"
               android:paddingLeft="16dp"
               android:paddingTop="4dp"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/txt"
               android:orientation="horizontal"
               android:background="#fff"
               >

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_weight="1"
                   android:drawableBottom="@drawable/ic_edit_black_24dp"
                   android:background="#00000000"
                   android:padding="8dp"
                   />

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_weight="1"
                   android:drawableBottom="@drawable/ic_delete_black_24dp"
                   android:background="#00000000"
                   android:padding="8dp"
                   />
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_weight="1"
                   android:drawableBottom="@drawable/ic_favorite_black_24dp"
                   android:background="#00000000"
                   android:padding="8dp"
                   />


           </LinearLayout>


       </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>