<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#3F51B5">

    <TextView
        android:background="#1A237E"
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Criando Nova Palavra"
        android:padding="6dp"/>

    <EditText
        android:id="@+id/edtWord"
        android:backgroundTint="#fff"
        android:layout_below="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Clique aqui para digitar a Palavra"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textCursorDrawable="@null"
        />

    <EditText
        android:id="@+id/edtTrad"
        android:backgroundTint="#fff"
        android:layout_below="@+id/edtWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Clique aqui para digitar a Tradução"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textCursorDrawable="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTrad"
        >

        <Button
            android:id="@+id/btnCon"
            android:background="#1A237E"
            android:layout_weight="2"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="@string/ok"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/btnCanc"
            android:textColor="#fca184"
            android:background="#1A237E"
            android:layout_weight="2"
            android:textSize="14dp"
            android:text="@string/cancel"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </LinearLayout>

    <ImageView
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_border_color_black_24dp"/>

</RelativeLayout>
